<div id="<%= dom_id creature %>">
  <p>
    <strong>Name:</strong>
    <%= creature.name %>
  </p>

  <p>
    <strong>Power:</strong>
    <%= creature.power %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= creature.description %>
  </p>

  <p>
    <strong>Picture:</strong>
    <%= image_tag(creature.picture_url, width: 600) if creature.picture? %>
  </p>

</div>
